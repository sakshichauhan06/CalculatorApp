<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnRow">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="btnNumber">
        <item name="android:onClick">numAction</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">21dp</item>
        <item name="background">@null</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btnOperation">
        <item name="android:onClick">numOperations</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">21dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btnClears">
        <item name="android:onClick">clearOperations</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">21dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

</resources>